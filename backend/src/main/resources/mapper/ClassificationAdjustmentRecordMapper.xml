<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.langdong.spare.mapper.ClassificationAdjustmentRecordMapper">

    <resultMap id="AdjustmentResultMap" type="com.langdong.spare.entity.ClassificationAdjustmentRecord">
        <id property="id" column="id"/>
        <result property="sparePartId" column="spare_part_id"/>
        <result property="originalCombination" column="original_combination"/>
        <result property="newCombination" column="new_combination"/>
        <result property="reason" column="reason"/>
        <result property="applicantId" column="applicant_id"/>
        <result property="approverId" column="approver_id"/>
        <result property="status" column="status"/>
        <result property="approvalRemark" column="approval_remark"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="AdjustmentResultMap">
        SELECT * FROM classification_adjustment_record ORDER BY created_at DESC
    </select>

    <select id="findByStatus" resultMap="AdjustmentResultMap">
        SELECT * FROM classification_adjustment_record WHERE status = #{status} ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="AdjustmentResultMap">
        SELECT * FROM classification_adjustment_record WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO classification_adjustment_record (spare_part_id, original_combination, new_combination, reason, applicant_id, status)
        VALUES (#{sparePartId}, #{originalCombination}, #{newCombination}, #{reason}, #{applicantId}, #{status})
    </insert>

    <update id="updateStatus">
        UPDATE classification_adjustment_record
        SET status = #{status}, approver_id = #{approverId}, approval_remark = #{approvalRemark}
        WHERE id = #{id}
    </update>

</mapper>
