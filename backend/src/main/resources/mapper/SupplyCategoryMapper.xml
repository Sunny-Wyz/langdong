<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.langdong.spare.mapper.SupplyCategoryMapper">

    <resultMap id="CategoryResultMap" type="com.langdong.spare.entity.SupplyCategory">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="CategoryResultMap">
        SELECT id, code, name, description, created_at, updated_at
        FROM supply_category
        ORDER BY created_at DESC
    </select>

    <select id="findById" resultMap="CategoryResultMap">
        SELECT id, code, name, description, created_at, updated_at
        FROM supply_category
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO supply_category (code, name, description)
        VALUES (#{code}, #{name}, #{description})
    </insert>

    <update id="update">
        UPDATE supply_category
        <set>
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM supply_category WHERE id = #{id}
    </delete>

</mapper>
